<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvText"
        android:text="content"
        android:gravity="center"
        android:textColor="@color/black_effective"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <!--&lt;!&ndash;圆环半径&ndash;&gt;-->
    <!--<attr name="radius" format="dimension"/>-->
    <!--&lt;!&ndash;圆环宽度&ndash;&gt;-->
    <!--<attr name="ring_width" format="dimension"/>-->
    <!--&lt;!&ndash;圆环颜色&ndash;&gt;-->
    <!--<attr name="ring_color" format="color"/>-->

    <!--&lt;!&ndash;进度圆环宽度&ndash;&gt;-->
    <!--<attr name="progress_ring_width" format="dimension"/>-->
    <!--&lt;!&ndash;进度圆环开始颜色&ndash;&gt;-->
    <!--<attr name="progress_ring_start_color" format="color"/>-->
    <!--&lt;!&ndash;进度圆环结束颜色&ndash;&gt;-->
    <!--<attr name="progress_ring_end_color" format="color"/>-->

    <!--<attr name="android_radius" format="dimension"/>-->

    <!--<attr name="text_color" format="color"/>-->

    <!--<attr name="text_size" format="dimension"/>-->


    <com.yelai.wearable.widget.RoundView
        android:id="@+id/roundView"
        app:ring_color="@color/tab_text_selected"
        app:ring_width="8dp"
        app:progress_ring_start_color="@color/tab_text_selected"
        app:progress_ring_end_color="@color/tab_text_selected"
        app:progress_ring_width="4dp"
        app:radius="10dp"
        app:android_radius="80dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        />



    <com.yelai.wearable.widget.ProgressView
        app:pv_inner_circle="@dimen/pv_circle_width"
        app:pv_outter_circle="@dimen/pv_circle_width"
        app:pv_textsize="@dimen/pv_textsize"
        app:pv_xsd_textsize="@dimen/pv_xsd_textsize"
        app:pv_stroke_width="@dimen/pv_stroke_width"
        app:pv_stroke_width_outter="@dimen/pv_stroke_width_outter"
        app:pv_text_height="2dp"
        android:id="@+id/progress"
        android:layout_width="@dimen/progressview_idread"
        android:layout_height="@dimen/progressview_idread"
        android:elevation="1dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        />

</android.support.constraint.ConstraintLayout>