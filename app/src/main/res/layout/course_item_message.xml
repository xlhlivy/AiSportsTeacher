<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@android:color/white"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/course_item_background_banner1"
        android:id="@+id/ivHeader"
        android:layout_width="37dp"
        android:layout_height="37dp" />

    <TextView
        android:layout_marginLeft="8dp"
        android:id="@+id/tvUserName"
        app:layout_constraintLeft_toRightOf="@id/ivHeader"
        app:layout_constraintTop_toTopOf="@id/ivHeader"
        tools:text="身体唤醒"
        android:textColor="@color/text_black_color"
        android:layout_marginTop="4dp"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tvTime"
        app:layout_constraintLeft_toLeftOf="@id/tvUserName"
        app:layout_constraintBottom_toBottomOf="@id/ivHeader"
        android:layout_marginBottom="4dp"
        tools:text="身体唤醒"
        android:textColor="#a7adbd"
        android:textSize="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tvContent"
        app:layout_constraintTop_toBottomOf="@id/ivHeader"
        app:layout_constraintLeft_toLeftOf="@id/tvUserName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        tools:text="身体唤醒"
        android:textColor="#2d2e31"
        android:textSize="10dp"
        android:maxHeight="60dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>