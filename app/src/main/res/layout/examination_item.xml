<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:background="@android:color/transparent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="110dp">
    
    <ImageView
        android:src="@drawable/icon_img_default"
        android:scaleType="fitXY"
        android:id="@+id/ivBackground"
        app:layout_constraintDimensionRatio="1.72"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tvCourseType"
        android:scaleType="fitXY"
        android:background="@drawable/day_right_circle_background"
        app:layout_constraintLeft_toLeftOf="@id/ivBackground"
        app:layout_constraintTop_toTopOf="@id/ivBackground"
        android:text="教学课"
        android:textSize="11dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="60dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvCourseName"
        app:layout_constraintLeft_toRightOf="@id/ivBackground"
        app:layout_constraintTop_toTopOf="@id/ivBackground"
        android:layout_margin="8dp"
        tools:text="身体唤醒"
        android:textStyle="bold"
        android:textColor="@color/text_black_color"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tvCourseDetail"
        app:layout_constraintLeft_toLeftOf="@id/tvCourseName"
        app:layout_constraintTop_toBottomOf="@id/tvCourseName"
        android:layout_marginTop="3dp"
        tools:text="身体唤醒"
        android:textColor="@color/text_color_6"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tvEdit"
        app:layout_constraintLeft_toLeftOf="@id/tvCourseName"

        app:layout_constraintTop_toBottomOf="@id/tvCourseDetail"
        android:layout_marginTop="10dp"

        android:textColor="@color/tab_text_selected"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"

        android:layout_marginBottom="20dp"
        android:background="@drawable/rb_btn_background_normal"
        android:text="编辑班级"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tvStart"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCourseDetail"
        android:layout_marginTop="10dp"

        android:textColor="@color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@drawable/mine_btn_green_background"
        android:text="开始考试"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:visibility="gone"

        android:id="@+id/tvContinue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCourseDetail"
        android:layout_marginTop="10dp"

        android:textColor="#ffae00"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@drawable/rb_btn_background_orange"
        android:text="继续考试"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:visibility="gone"
        android:id="@+id/tvFinish"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCourseDetail"
        android:layout_marginTop="12dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/tab_text_selected"
        android:text="考试完成"
        android:textSize="14dp"
        android:textAppearance="@style/TextAppearance.FontPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</android.support.constraint.ConstraintLayout>