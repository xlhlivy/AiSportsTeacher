<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_marginTop="30dp"
        android:text="身份绑定"
        android:textSize="17dp"
        android:textColor="@color/text_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="40dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_width="match_parent"
        android:layout_height="56dp">


        <TextView
            android:layout_marginLeft="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="end"

            android:id="@+id/txtSchool"
            android:text="学校"
            android:textColor="@color/text_normal"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />


        <EditText
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/txtSchool"

            android:id="@+id/etSchool"
            android:layout_marginLeft="36dp"
            android:textColor="@color/text_normal"
            android:textColorHint="@color/text_selected"
            android:hint="请填写学校"
            android:textSize="17dp"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <View android:background="#707c9a"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="1px"
            />


    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:layout_marginLeft="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/txtNo"
            android:gravity="end"

            android:text="学号"
            android:textColor="@color/text_normal"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <EditText
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/txtNo"

            android:id="@+id/etNo"
            android:layout_marginLeft="36dp"
            android:textColor="@color/text_normal"
            android:textColorHint="@color/text_selected"
            android:hint="请填写学号"
            android:textSize="17dp"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <View android:background="#707c9a"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="1px"
            />


    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:layout_marginLeft="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/txtName"
            android:gravity="end"

            android:text="姓名"
            android:textColor="@color/text_normal"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <EditText
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/txtName"

            android:id="@+id/etName"
            android:layout_marginLeft="36dp"
            android:textColor="@color/text_normal"
            android:textColorHint="@color/text_selected"
            android:hint="请填写姓名"
            android:textSize="17dp"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <View android:background="#707c9a"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="1px"
            />


    </android.support.constraint.ConstraintLayout>




    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>



    <Button
        android:id="@+id/btnNext"
        android:textSize="14dp"
        android:textColor="@color/text_normal"
        android:text="下一步"
        android:layout_marginLeft="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/btn_selector"
        android:layout_width="match_parent"
        android:layout_height="40dp" />






</LinearLayout>