<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@color/white">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="46dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="136dp">

                <TextView
                    android:textSize="13sp"
                    android:text="封面"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black_color"
                    android:layout_width="90dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/ivBackground"
                    android:scaleType="fitXY"
                    android:background="@drawable/et_background"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/text_black_color"
                    android:textSize="12dp"
                    android:gravity="center_vertical"
                    android:lines="1"
                    tools:text="haha"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>



            <LinearLayout
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="46dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:textSize="13sp"
                    android:text="课次名称"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black_color"
                    android:layout_width="90dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/tvCourseName"
                    android:background="@drawable/et_background"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/text_black_color"
                    android:textSize="12dp"
                    android:gravity="center_vertical"
                    android:lines="1"
                    tools:text="haha"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="46dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:textSize="13sp"
                    android:text="测试老师"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black_color"
                    android:layout_width="90dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tvCourseTeacher"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/text_black_color"
                    android:textSize="12dp"
                    android:gravity="center_vertical"
                    android:lines="1"
                    tools:text="haha"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="46dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:textSize="13sp"
                    android:text="课次类型"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black_color"
                    android:layout_width="90dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tvCourseType"
                    android:drawableRight="@drawable/icon_arrow_down"
                    android:background="@drawable/et_background"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/text_black_color"
                    android:textSize="12dp"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="教学课"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="46dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:textSize="13sp"
                    android:text="本学期总课次"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black_color"
                    android:layout_width="90dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/tvCourseCount"
                    android:inputType="number"
                    android:background="@drawable/et_background"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/text_black_color"
                    android:textSize="12dp"
                    android:gravity="center_vertical"
                    android:lines="1"
                    tools:text="haha"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
            
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:minHeight="200dp"
                android:layout_weight="1"
                android:layout_height="0dp">

            </android.support.v7.widget.RecyclerView>

            <!--<cn.droidlover.xrecyclerview.XRecyclerContentLayout-->
                <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
                <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
                <!--android:id="@+id/contentLayout"-->
                <!--android:layout_width="match_parent"-->
                <!--android:minHeight="200dp"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_height="0dp"-->
                <!--app:x_loadingLayoutId="@layout/view_loading"-->
                <!--app:recyclerBackgroundColor="@android:color/transparent"-->
                <!--app:recyclerScrollbarNone="true"-->
                <!--app:recyclerScrollbarStyle="outsideOverlay" />-->

            <Button
                android:layout_alignParentBottom="true"
                android:id="@+id/btnSave"
                android:textSize="14dp"
                android:textColor="@color/text_normal"
                android:text="保存"
                android:layout_marginLeft="63dp"
                android:layout_marginRight="63dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/mine_btn_logout_green_background"
                android:layout_width="match_parent"
                android:layout_height="40dp" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>





</RelativeLayout>


