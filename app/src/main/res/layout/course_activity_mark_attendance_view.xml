<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    
    <ImageView
        android:id="@+id/btnCancel"
        android:padding="8dp"
        android:layout_gravity="end"
        android:src="@drawable/course_icon_close"
        android:layout_width="32dp"
        android:layout_height="32dp" />


    <com.yelai.wearable.widget.MutilineRadioGroup
        android:id="@+id/rgMark"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <RadioButton
                android:id="@+id/id1"
                android:button="@null"
                android:text="标记为请假"
                android:gravity="center"
                android:textSize="14dp"
                android:tag="2"
                android:textStyle="normal"
                android:textColor="@drawable/rb_text_selector"
                android:layout_weight="1"
                android:background="@drawable/rb_btn_selector"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View
                android:layout_width="30dp"
                android:layout_height="0dp"/>

            <RadioButton
                android:id="@+id/id2"
                android:checked="true"
                android:button="@null"
                android:text="签到"
                android:tag="1"
                android:gravity="center"
                android:textSize="14dp"
                android:layout_weight="1"
                android:textColor="@drawable/rb_text_selector"
                android:background="@drawable/rb_btn_selector"                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <RadioButton
                android:id="@+id/id3"
                android:button="@null"
                android:text="移除学生"
                android:tag="5"
                android:gravity="center"
                android:textSize="14dp"
                android:textStyle="normal"
                android:layout_weight="1"
                android:textColor="@drawable/rb_text_selector"
                android:background="@drawable/rb_btn_selector"                    android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View
                android:layout_width="30dp"
                android:layout_height="0dp"/>

            <RadioButton
                android:id="@+id/id4"
                android:button="@null"
                android:text="设置异常"
                android:gravity="center"
                android:tag="3"
                android:textSize="14dp"
                android:layout_weight="1"
                android:textColor="@drawable/rb_text_selector"
                android:background="@drawable/rb_btn_selector"                  android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

    </com.yelai.wearable.widget.MutilineRadioGroup>

    <Button
        android:id="@+id/btnSave"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textColor="@android:color/white"
        android:text="保 存"
        android:background="@drawable/mine_btn_logout_green_background"
        android:layout_width="match_parent"
        android:layout_height="40dp" />





</LinearLayout>