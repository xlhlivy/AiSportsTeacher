<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/waveLoadingViewContainer"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.yelai.wearable.widget.CircleProgressTextView
            android:id="@+id/waveLoadingView"
            android:layout_margin="4dp"
            app:cptv_empty_color="@color/white"
            app:cptv_full_color="@color/tab_text_selected"
            app:cptv_stroke_width="1dp"
            android:text="18"
            android:textSize="18dp"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:layout_width="60dp"
            android:layout_height="60dp" />

    </FrameLayout>


    <TextView
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/waveLoadingViewContainer"
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dp"
        android:text="80"
        android:textColor="@color/text_black_color"
        android:textSize="12dp"
        />


    <CheckBox
        app:layout_constraintBottom_toBottomOf="@id/waveLoadingViewContainer"
        app:layout_constraintRight_toRightOf="@id/waveLoadingViewContainer"
        android:button="@null"
        android:background="@drawable/course_sign_unchecked"
        android:id="@+id/cbCheck"
        android:layout_width="20dp"
        android:layout_height="20dp" />






</android.support.constraint.ConstraintLayout>